generator client {
  provider = "prisma-client-ts"
  output   = "../src/prisma/generated"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Class {
  id   Int    @id @default(autoincrement())
  name String

  timetables Timetable[]
  mails      Mail[]
}

model Week {
  id    Int    @id
  label String

  timetables Timetable[]
}

model Timetable {
  id      Int    @id @default(autoincrement())
  class   Class  @relation(fields: [classId], references: [id])
  classId Int
  week    Week   @relation(fields: [weekId], references: [id])
  weekId  Int
  data    Json
  hash    String
}

model Mail {
  id       Int    @id @default(autoincrement())
  email    String
  class    Class  @relation(fields: [classId], references: [id])
  classId  Int
  subjects Json?
  groups   Json?
  hash     String
}

model Professor {
  id   Int    @id @default(autoincrement())
  name String

  profmails Profmail[]
}

model ApiKey {
  id         Int      @id @default(autoincrement())
  key        String   @unique
  createdAt  DateTime @default(now())
  usageCount Int      @default(0)
  type       Int      @default(0) // 0 = general, 1 = mobile
}

model Profmail {
  id        Int       @id @default(autoincrement())
  email     String
  professor Professor @relation(fields: [profId], references: [id])
  profId    Int
  hash      String
}
